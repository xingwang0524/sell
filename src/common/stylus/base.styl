
border-1px($color)
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    bottom: 0px
    left: 0px
    height: 1px
    width: 100%
    background-color: $color
    transform:scaleY(0.5)
border-top($color)
  position: relative
  &:before
    content: ''
    display: block
    position: absolute
    top: 0px
    left: 0px
    height: 1px
    width: 100%
    background-color: $color
    transform:scaleY(0.5)
border-none()
  &:after
    display none
bg-img($url)
  background-image: url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + '@3x.png')



